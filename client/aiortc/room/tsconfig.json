{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2018",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "sourceRoot": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es2015",
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src"
  ]
}
