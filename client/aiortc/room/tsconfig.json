{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2020",
    "sourceMap": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": false,
    "noImplicitAny" : true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": false,
    "lib": [ "es2018", "dom" ]
  },
  "include": [
    "src"
  ]
}
